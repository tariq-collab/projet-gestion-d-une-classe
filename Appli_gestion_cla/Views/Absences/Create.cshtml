@model Appli_gestion_cla.Models.Absence

@{
    ViewData["Title"] = "Créer";
}

<h1>Créer</h1>

<h4>Absence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Heure_Absence" class="control-label"></label>
                <input asp-for="Heure_Absence" class="form-control" />
                <span asp-validation-for="Heure_Absence" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="EtudiantId" class="control-label"></label>
                <select asp-for="EtudiantId" class="form-control" asp-items="ViewBag.Etudiants"><option value="">--Selectionner une classe--</option></select>
                <span asp-validation-for="EtudiantId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="ClasseId" class="control-label"></label>
                <select asp-for="ClasseId" class="form-control" asp-items="ViewBag.Classes"><option value="">--Selectionner une classe--</option></select>
                <span asp-validation-for="ClasseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
