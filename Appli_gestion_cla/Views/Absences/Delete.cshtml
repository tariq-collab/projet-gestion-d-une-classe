@model Appli_gestion_cla.Models.Absence

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Voulez-vous vraiment supprimer cette absence?</h3>
<div>
    <h4>Absence</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Heure_Absence)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Heure_Absence)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Etudiant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EtudiantId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClasseId)
        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
