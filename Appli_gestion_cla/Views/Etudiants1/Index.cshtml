@model IEnumerable<Appli_gestion_cla.Models.Etudiant>

@{
    ViewData["Title"] = "Accueil Étudiant";
}
<link rel="stylesheet" href="~/css/etudiant.css" />

<div class="dashboard">

    <!-- EN-TÊTE -->
    <header class="dashboard-header">
        <h1>Bienvenue 👋</h1>
        <p>Espace étudiant</p>
    </header>

    <!-- INFOS -->
    <section class="cards">


        <div class="card">
            <h3>📝 Notes</h3>
            <p>Consulter mes notes</p>
            <a class="btn" href="~/Notes/Index">Voir</a>
        </div>

    </section>

    <!-- DÉCONNEXION -->
    <div class="logout">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit">Déconnexion</button>
        </form>
    </div>

    <div class="card">
        <h3>📅 Emploi du temps</h3>
        <p>Voir mon emploi du temps</p>
        <a class="btn" asp-controller="Admins" asp-action="EmploiDuTemps">Ouvrir</a>
    </div>

</div>


