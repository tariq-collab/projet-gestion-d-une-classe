        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEvaluation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeEvaluation)
            </td>
