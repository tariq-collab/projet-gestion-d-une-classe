@model Appli_gestion_cla.Models.Note

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Delete</h1>

<h3>Voulez-vous vraiment supprimer cette note?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valeur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valeur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEvaluation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEvaluation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeEvaluation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeEvaluation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Etudiant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Etudiant.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Affectation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Affectation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
